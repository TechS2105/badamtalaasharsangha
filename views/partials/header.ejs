    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>

        let aboutSubMenu = document.getElementById("aboutid");
        let memberSubMenu = document.getElementById("membersid");
        let logoImage = document.querySelector(".image img");
        let linkBox = document.querySelectorAll(".links .linkbox");
        // let largeHeaderSection = document.querySelector(".largescreenheader");
        let smallHeaderSection = document.querySelector(".smallscreenheader");
        let header = document.querySelector("header");

        smallHeaderSection.style.transform = "translate(-50%, -50%) translateY(-1000px)";
        smallHeaderSection.style.filter = "blur(10px)";

        function menuFunction(){

            $(aboutSubMenu).on({

                "mouseover": function (){

                    $(".submenu").css({

                        display: "flex",

                    });

                },

                "mouseout": function (){

                    $(".submenu").css({

                        display: "none",
                        transition: "all 1s ease"

                    });

                }

            });

            $(memberSubMenu).on({

                "mouseover": function (){

                    $('.submenu2').css({

                        display: "flex"

                    });

                },

                "mouseout": function (){

                    $('.submenu2').css({

                        display: "none"

                    })

                }

            });

        }

        function headerHideShowAnimation(){

            window.addEventListener("scroll", () => {

                if($(window).scrollTop() > 100){

                    header.classList.add('hidden');

                    $(smallHeaderSection).css({

                        transform: "translate(-50%, -50%) translateY(0px)",
                        transition: "all 0.5s ease",
                        filter: "blur(0px)",
                        position: "fixed",
                        top: "10%",
                        left: "50%",
                        zIndex: "999999999"

                    });


                }else{


                    header.classList.remove('hidden');

                    $(smallHeaderSection).css({

                        transform: "translateY(-1000px) translate(-50%, -50%)",
                        filter: "blur(10px)",
                        position: "fixed",
                        transition: "all 2s ease"

                    });

                }

            });

        }

        window.addEventListener("load", () => {

            setTimeout(() => {

                menuFunction();
                headerHideShowAnimation();
                // logoAnime();
                // linkBoxAnime();

            });

        })

