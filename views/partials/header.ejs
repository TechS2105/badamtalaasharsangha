    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>

        let aboutSubMenu = document.getElementById("aboutid");
        let memberSubMenu = document.getElementById("membersid");
        let logoImage = document.querySelector(".image img");
        let linkBox = document.querySelectorAll(".links .linkbox");

        linkBox.forEach((link) => {

            link.style.transform = "scale(0)";

        });

        $(logoImage).css({

            transform: "scale(0)",
            opacity: "0"

        });

        function logoAnime(){

            $(logoImage).css({

                transform: "scale(1)",
                opacity: "1",
                transition: "all 0.7s ease"

            });

        }

        function linkBoxAnime(){

           $(linkBox[0]).css({

                transform: "scale(1)",
                transition: "all 0.7s ease 0.5s"

           });

           $(linkBox[1]).css({

            transform: "scale(1)",
            transition: "all 0.7s ease 0.6s"

           });

           $(linkBox[2]).css({

            transform: "scale(1)",
            transition: "all 0.7s ease 0.7s"

           });

           $(linkBox[3]).css({

            transform: "scale(1)",
            transition: "all 0.7s ease 0.8s"

           });

        }

        function menuFunction(){

        $(aboutSubMenu).on({

            "mouseover": function (){

                $(".submenu").css({

                    display: "flex",

                });

            },

            "mouseout": function (){

                $(".submenu").css({

                    display: "none",
                    transition: "all 1s ease"

                });

            }

        });

        $(memberSubMenu).on({

            "mouseover": function (){

                $('.submenu2').css({

                    display: "flex"

                });

            },

            "mouseout": function (){

                $('.submenu2').css({

                    display: "none"

                })

            }

        });

    }

        window.addEventListener("load", () => {

            setTimeout(() => {

                menuFunction();
                logoAnime();
                linkBoxAnime();

            });

        })

    </script>

</body>
