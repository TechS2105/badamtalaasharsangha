<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
    rel="stylesheet"/>
    <link rel="stylesheet" href="/styles/imageshowcase.css">
</head>
<body>
    
    <div class="imageshowcasesection">

        <div class="imagecoloroverlay">

            <!-- Image show case section -->
            <div class="imageshowcase">

                <div class="firstimagebox">

                    <div class="galleryimage">

                        <img src="https://images.pexels.com/photos/14289046/pexels-photo-14289046.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt />

                    </div>

                    <div class="galleryimage"></div>

                    <div class="galleryimage">

                        <img src="https://images.pexels.com/photos/13948622/pexels-photo-13948622.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt>

                    </div>

                </div>
                <div class="secondimagebox">

                    <div class="galleryimage"></div>

                    <div class="galleryimage">

                        <img src="https://images.pexels.com/photos/9938557/pexels-photo-9938557.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt>
                        
                    </div>

                    <div class="galleryimage"></div>

                </div>
                <div class="thirdimagebox">

                    <div class="galleryimage">

                        <img src="https://images.pexels.com/photos/15873616/pexels-photo-15873616/free-photo-of-a-colorful-durga-goddess-statue.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt>

                    </div>

                    <div class="galleryimage"></div>

                    <div class="galleryimage">

                        <img src="https://images.pexels.com/photos/19241118/pexels-photo-19241118/free-photo-of-golden-durga-statue.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt>

                    </div>

                </div>

            </div>

            <!-- Image text section -->
            <div class="imagetext">

                <div class="logoimg">

                    <img src="/images/logo.png" alt="">

                </div>

                <div class="textandlink">

                    <h2> Image Showcase </h2>
                    <a href="#"><button> View More </button></a>

                </div>

            </div>

        </div>

        <div class="bigimagecontainer" style="display: none;">

            <i class="ri-close-large-fill" onclick="imageCloseFun()"></i>

            <div class="bigimage">

                <img src="https://images.pexels.com/photos/14289046/pexels-photo-14289046.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="">

            </div>

        </div>

    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/js/imageshowcase.js"></script>

</body>
</html>